<% if @trip.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

    <ul>
    <% @trip.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% form_for @trip do |f| %>
  <!-- User -->
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <!-- Destination -->
  <%= f.label :destination %>
  <%= f.text_field :destination %>

  <!-- Duration -->
  <%= f.label :start_date %>
  <%= f.text_field :start_date %>

  <%= f.label :end_date %>
  <%= f.text_field :end_date %>

  <!-- Travel Info -->
  <%= f.label :departure_city %>
  <%= f.text_field :departure_city %>

  <%= f.label :departure_time %>
  <%= f.text_field :departure_time %>

  <%= f.label :arrival_city %>
  <%= f.text_field :arrival_city %>

  <%= f.label :arrival_time %>
  <%= f.text_field :arrival_time %>

  <!-- Accomodations -->
  <%= f.label :accomodation_name %>
  <%= f.text_field :accomodation_name %>

  <%= f.submit 'Create trip' %>
<% end %>